{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jekyll: Serve & Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jekyll",
            "args": ["serve", "--host", "0.0.0.0", "--livereload"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}