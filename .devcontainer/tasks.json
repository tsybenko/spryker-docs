{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Jekyll: Serve",
            "type": "shell",
            "command": "bundle",
            "args": ["exec", "jekyll", "serve", "--host", "0.0.0.0", "--livereload", "--incremental"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Jekyll: Build",
            "type": "shell",
            "command": "bundle",
            "args": ["exec", "jekyll", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Jekyll: Clean",
            "type": "shell",
            "command": "bundle",
            "args": ["exec", "jekyll", "clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: Markdown",
            "type": "shell",
            "command": "markdownlint-cli2",
            "args": ["**/*.md", "!node_modules", "!vendor"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: Vale",
            "type": "shell",
            "command": "vale",
            "args": ["."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build: Styles",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}